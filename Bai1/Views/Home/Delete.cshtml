@model Bai1.Models.Theloaitin

@{
    ViewBag.Title = "XÓA THỂ LOẠI TIN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h4>Bạn có chắc muốn xóa thể loại này không???</h4>

<table class="table table-bordered mt-3">
    <tr>
        <th>ID Loai</th>
        <td>@Model.IDLoai</td>
    </tr>
    <tr>
        <th>Ten The loai</th>
        <td>@Model.Tentheloai</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Xóa" class="btn btn-danger" />
    @Html.ActionLink("Hủy", "Index", "Home", null, new { @class = "btn btn-secondary" })
}
